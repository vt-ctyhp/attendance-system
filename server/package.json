{
  "name": "attendance-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:status": "prisma migrate status",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "seed:sample": "ts-node scripts/seedSampleData.ts",
    "seed:payroll-demo": "ts-node scripts/seedPayrollDemoMonth.ts",
    "lint": "eslint .",
    "test": "vitest run --dir tests --reporter verbose",
    "test:makeup-cap": "node scripts/testMakeupCap.mjs",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/client": "5.17.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "node-schedule": "2.1.1",
    "pino": "9.2.0",
    "pino-http": "10.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.12.12",
    "@types/node-schedule": "^2.1.8",
    "@types/pino": "7.0.5",
    "@types/pino-http": "6.1.0",
    "@typescript-eslint/eslint-plugin": "7.13.0",
    "@typescript-eslint/parser": "7.13.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "nodemon": "3.1.4",
    "prisma": "5.17.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
