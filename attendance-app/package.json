{
  "name": "attendance-app",
  "version": "0.2.0",
  "private": true,
  "description": "Attendance tracking Electron app",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc",
    "build:renderer": "esbuild src/renderer/index.ts --bundle --platform=browser --format=iife --outfile=dist/renderer/index.js --sourcemap",
    "copy:assets": "copyfiles -u 1 \"src/**/*.html\" dist",
    "prepare:dist": "npm run clean && npm run build:ts && npm run build:renderer && npm run copy:assets",
    "start": "npm run prepare:dist && electron .",
    "pack": "npm run prepare:dist && electron-builder --dir",
    "dist": "npm run prepare:dist && electron-builder",
    "test": "vitest run"
  },
  "build": {
    "appId": "com.example.attendanceapp",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "AttendanceApp-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "AttendanceApp-${version}-win-${arch}.${ext}"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "copyfiles": "^2.4.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.21.5",
    "jsdom": "^24.1.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "active-win": "^9.0.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.2",
    "npm": "^11.6.1",
    "start": "^5.1.0"
  }
}
